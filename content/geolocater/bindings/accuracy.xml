<!DOCTYPE bindings SYSTEM "chrome://geolocater/locale/bindings.dtd">

<bindings xmlns="http://www.mozilla.org/xbl"
  xmlns:xbl="http://www.mozilla.org/xbl"
  xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="default">
    <content>
      <xul:vbox flex="1">
        <xul:hbox>
          <xul:label value="&accuracy.name.label;"/>
          <xul:spacer flex="1"/>
          <xul:label anonid="label" value="0"/>
          <xul:label value="&accuracy.unit.label;"/>
        </xul:hbox>
        <xul:toolbox>
          <xul:toolbar>
            <xul:toolbarbutton label="-" width="35" 
              oncommand="this.nextSibling.decrease();"/>
            <xul:scale anonid="scale"
              min="0" max="8"
              flex="1"/>
            <xul:toolbarbutton label="+" width="35"
              oncommand="this.previousSibling.increase();"/>
          </xul:toolbar>
        </xul:toolbox>
      </xul:vbox>
    </content>
    <implementation>
      <field name="_scale">null</field>
      <property name="scale">
        <getter>
          return this._scale;
        </getter>
        <setter>
          <![CDATA[
            if (!(val instanceof Array))
              return false;
            
            var elem = document.getAnonymousElementByAttribute(this,
                                                               'anonid',
                                                               'scale');
            elem.max = val.length-1;
            this._scale = val;
            return true;
          ]]>
        </setter>
      </property>
      <property name="value">
        <getter>
          <![CDATA[
            if (this._scale == null)
              return -1;

            var elem = document.getAnonymousElementByAttribute(this,
                                                               'anonid',
                                                               'scale');
            return this._scale[elem.value];
          ]]>
        </getter>
        <setter>
          <![CDATA[
            if (this._scale == null)
              return false;
            
            var index = -1;
            this._scale.forEach(function(v,i) {
              if (v == val)
                index = i;
            });
            if (index == -1)
              return false;
            var elem = document.getAnonymousElementByAttribute(this,
                                                               'anonid',
                                                               'scale');
            if (elem.value == index && index != 0)
              elem.value = index-1;
            else if (elem.value == index)
              elem.value = index+1;

            elem.value = index;
            return this.value;
          ]]>
        </setter>
      </property>
      <constructor>
        <![CDATA[
        ]]>
      </constructor>
    </implementation>
    <handlers>
      <handler event="change">
        <![CDATA[
          var elem = document.getAnonymousElementByAttribute(this,
                                                             'anonid',
                                                             'label');
          elem.setAttribute('value',this.value);
        ]]>
      </handler>
    </handlers>
  </binding>

</bindings>
